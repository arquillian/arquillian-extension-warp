<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <!-- Parent -->
  <parent>
    <groupId>org.jboss</groupId>
    <artifactId>jboss-parent</artifactId>
    <version>51</version>
  </parent>

  <!-- Model Version -->
  <modelVersion>4.0.0</modelVersion>

  <!-- Artifact Configuration -->
  <groupId>org.jboss.arquillian.extension</groupId>
  <artifactId>arquillian-warp-aggregator</artifactId>
  <version>2.1.0.Final-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Arquillian Warp: Parent</name>
  <description>Taking tests from Client to the Server and back</description>
  <url>https://arquillian.org/arquillian-extension-warp/</url>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>

  <organization>
    <name>Arquillian Community</name>
    <url>https://arquillian.org/</url>
  </organization>

  <developers>
    <developer>
      <name>Lukas Fryc</name>
      <email>lfryc@redhat.com</email>
      <roles>
        <role>Emeritus Author</role>
      </roles>
    </developer>
    <developer>
      <name>Radoslav Husar</name>
      <email>rhusar@redhat.com</email>
      <roles>
        <role>Maintainer</role>
      </roles>
    </developer>
  </developers>

  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/arquillian/arquillian-extension-warp/issues</url>
  </issueManagement>

  <scm>
    <connection>scm:git:git://github.com:arquillian/arquillian-extension-warp.git</connection>
    <developerConnection>scm:git:git@github.com:arquillian/arquillian-extension-warp.git</developerConnection>
    <url>https://github.com/arquillian/arquillian-extension-warp</url>
    <tag>HEAD</tag>
  </scm>

  <ciManagement>
    <system>GitHub Actions</system>
    <url>https://github.com/arquillian/arquillian-extension-warp/actions</url>
  </ciManagement>

  <properties>
    <!-- JBoss Parent -->
    <maven.compiler.release>17</maven.compiler.release>

    <!-- Arquillian -->
    <version.arquillian_core>1.10.0.Final</version.arquillian_core>
    <version.org.jboss.arquillian.jakarta>10.0.0.Final</version.org.jboss.arquillian.jakarta>
    <version.arquillian_drone>3.0.0-alpha.8</version.arquillian_drone>
    <version.arquillian_jacoco>1.1.0</version.arquillian_jacoco>

    <!-- Jakarta EE 10 -->
    <version.jakarta.annotation.jakarta-annotation-api>2.1.1</version.jakarta.annotation.jakarta-annotation-api>
    <version.jakarta.enterprise.jakarta-enterprise-cdi-api>4.0.1</version.jakarta.enterprise.jakarta-enterprise-cdi-api>
    <version.jakarta.faces.jakarta-faces-api>4.0.1</version.jakarta.faces.jakarta-faces-api>
    <version.jakarta.servlet.jakarta-servlet-api>6.0.0</version.jakarta.servlet.jakarta-servlet-api>
    <version.jakarta.el.jakarta-el-api>5.0.0</version.jakarta.el.jakarta-el-api>

    <version.littleproxy>2.4.6</version.littleproxy>
    <!-- LittleProxy logging is done through SL4J and thus Log4j -->
    <version.log4j>2.25.2</version.log4j>
    <version.javassist>3.30.2-GA</version.javassist>
    <version.httpcore>5.3.6</version.httpcore>

    <!-- Tests -->
    <version.junit>6.0.0</version.junit>
    <version.mockito>5.20.0</version.mockito>
    <version.jacoco>0.8.14</version.jacoco>
    <version.shrinkwrap>1.2.6</version.shrinkwrap>
    <version.shrinkwrap.resolver>3.3.4</version.shrinkwrap.resolver>
    <version.jboss_spec>3.0.3.Final</version.jboss_spec>
    <surefire.security.manager />
    <modular.jdk.args />

    <!-- Container Versions -->
    <version.tomee>10.1.2</version.tomee>
    <!-- Tomcat version bundled with TomEE - see https://tomee.apache.org/comparison.html
         The version can be found in "lib/servlet-api.jar"
         It does not have to match exactly the version bundled with TomEE, but it should be at least the same JakartaEE spec version.-->
    <version.tomee.tomcat>10.1.44</version.tomee.tomcat>
    <version.glassfish>7.0.25</version.glassfish>
    <!-- GlassFish 8 ist used to test JakartaEE11 features -->
    <version.glassfish8>8.0.0-M13</version.glassfish8>
    <version.wildfly>38.0.0.Final</version.wildfly>
    <version.wildfly.arquillian.container>5.1.0.Final</version.wildfly.arquillian.container>

    <!-- Documentation -->
    <version.asciidoctor-maven-plugin>3.2.0</version.asciidoctor-maven-plugin>
  </properties>

  <modules>
    <!-- build modules -->
    <module>build</module>
    <module>build/bom</module>
    <module>build/resources</module>
    <module>build/depchain</module>
    <module>build/ftest-base</module>

    <!-- Documentation module -->
    <module>build/docs</module>

    <!-- main modules -->
    <module>api</module>
    <module>spi</module>
    <module>impl</module>
    <module>impl_test_separatecl</module>
    <module>ftest</module>

    <!-- extensions -->
    <module>extension/jsf</module>
    <module>extension/jsf-ftest</module>

    <!--Jacoco report -->
    <module>aggregate-jacoco-report</module>
  </modules>

  <profiles>
    <profile>
      <!-- This profile is used to build arquillian-extension-warp by using the JakartaEE11 api:
           it redefines the versions of the JakartaEE dependencies.
           Use it only in combination with one of the JakartaEE11 server profiles, e.g.:
           mvn clean install -Pjakartaee11,wildfly-jakartaee11-managed
        -->
      <id>jakartaee11</id>
      <activation>
        <!-- Set this to "true" to compile the project with Eclipse using the JakartaEE11 apis. -->
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <version.jakarta.annotation.jakarta-annotation-api>3.0.0</version.jakarta.annotation.jakarta-annotation-api>
        <version.jakarta.enterprise.jakarta-enterprise-cdi-api>4.1.0</version.jakarta.enterprise.jakarta-enterprise-cdi-api>
        <version.jakarta.faces.jakarta-faces-api>4.1.2</version.jakarta.faces.jakarta-faces-api>
        <version.jakarta.servlet.jakarta-servlet-api>6.1.0</version.jakarta.servlet.jakarta-servlet-api>
        <version.jakarta.el.jakarta-el-api>6.0.1</version.jakarta.el.jakarta-el-api>
      </properties>
    </profile>
  </profiles>

</project>
